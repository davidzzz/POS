<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#ffcdcecd"
                android:centerColor="#ff9a9d9a"
                android:centerY="0.75"
                android:endColor="#ff969696"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#80ffff00"
                    android:centerColor="#80fff900"
                    android:centerY="0.75"
                    android:endColor="#80fff600"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#ffffff00"
                    android:centerColor="#fffff900"
                    android:centerY="0.75"
                    android:endColor="#fffff600"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>