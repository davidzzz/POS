<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="?attr/actionBarSize">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="26dp"
        android:layout_width="94dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/log_login" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="26dp"
        android:text="MOBILE POS"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_weight="2"
                    android:drawableTint="#404aff"
                    android:textSize="18sp"
                    android:enabled="false"
                    android:hint="Password"
                    android:inputType="textPassword"/>

                <TextView
                    android:id="@+id/email_sign_in_button"
                    android:layout_width="117dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp"
                    android:background="#cccccc"
                    android:fadingEdge="none"
                    android:gravity="center_vertical|center"
                    android:text="Login"
                    android:textColor="@android:color/background_light"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/satu"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="1"
                    android:textColor="#fcf9f9"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dua"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#fcf9f9"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tiga"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="3"
                    android:textColor="#fcf9f9"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/empat"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="4"
                    android:textColor="#fcf9f9"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/lima"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="5"
                    android:textColor="#fcf9f9"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/enam"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="6"
                    android:textColor="#fcf9f9"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tujuh"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="7"
                    android:textColor="#fcf9f9"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/delapan"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="8"
                    android:textColor="#fcf9f9"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/sembilan"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="9"
                    android:textColor="#fcf9f9"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/nol"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="0"
                    android:textColor="#fcf9f9"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="#cccccc"
                    android:gravity="center"
                    android:text="DELETE"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_light"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#ff9934">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="www.tssoft.co.id"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="10dp"
            android:text="08-1163-1168"
            android:textColor="@color/colorAccent"
            />
    </LinearLayout>
</LinearLayout>
